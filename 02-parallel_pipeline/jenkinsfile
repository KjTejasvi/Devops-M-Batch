pipeline {
	agent any
	stages{
		stage('Run Steps') {
			parallel {
				stage('Build') {
					steps {
						echo " Running Buils..." 
						sh 'sleep 3'
					}
				}
				stage('Test') {
					steps {
						echo " Running Tests..."
						sh 'sleep 2'
					}
				}
				stage('Lint') {
					steps {
						echo "Running Linter..."
						sh 'sleep 1'
					}
				}
			}
		}
		stage('Deply Steps') {
			steps {
				echo "Deploying Application..."
			}
		}
	}
}	